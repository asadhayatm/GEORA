<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/black_rect_cor_round_blacl_two">

    <ImageView
        android:id="@+id/iv_donamtion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/ic_donation_graphic" />

    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_donamtion"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sfuidisplaysemibold"
        android:padding="@dimen/_5sdp"
        android:text="@string/txt_enter_dob"
        android:textColor="@color/White"
        android:textSize="@dimen/_13ssp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_enter"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sfuidisplayregular"
        android:gravity="center"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="@string/please_enter_dob"
        android:textColor="@color/white_40"
        android:textSize="@dimen/_11ssp" />


    <TextView
        android:id="@+id/tv_dob"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/tv_description"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/black_rect_cor_round"
        android:fontFamily="@font/sfuidisplayregular"
        android:hint="MMM dd, yyyy"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/White"
        android:textColorHint="@color/white_20"
        android:textSize="@dimen/_13ssp" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_oval"
        android:fontFamily="@font/sfuidisplaybold"
        android:gravity="center"
        style="@style/semibold_test_13_black_back_yellow_oval_padding_10"
        android:text="@string/submit"
        android:layout_below="@+id/tv_dob"/>
</RelativeLayout>