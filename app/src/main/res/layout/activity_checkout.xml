<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.checkout.CheckoutActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_with_left_n_title" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tv_product_image"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:elevation="@dimen/_1sdp"
                android:src="@color/White" />


            <RelativeLayout
                android:id="@+id/rl_product_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/black_rect_cor_round"
                android:paddingBottom="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Shaifali Pundir"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginEnd="@dimen/_85sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:maxLines="2"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Shaifali Pundir"
                    android:textColor="@color/white__40"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_read_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_des"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Read More"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_read_more"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/size"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_size_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_read_more"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/tv_size"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:maxLines="2"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_size"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/color"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/iv_product_color"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@+id/tv_color"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/rounded_square_colors"
                    android:src="@color/warm_grey" />


                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/yellow_circle"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:gravity="center"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:layout_toLeftOf="@+id/tv_plus"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="1"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_minus"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_toLeftOf="@+id/tv_no"
                    android:background="@drawable/yellow_circle"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16ssp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_product_detail"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/black_rect_cor_round"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tv_price_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:text="@string/price_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_price_detail"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:text="@string/total_price"
                    android:textColor="@color/white__40"
                    android:textSize="@dimen/_11ssp" />


                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_total_price"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="1"
                    android:text="@string/discount_price"
                    android:textColor="@color/white__40"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:id="@+id/tv_paid_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_discount"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="1"
                    android:text="@string/paid_amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_total_price_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_total_price"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_toEndOf="@id/tv_total_price"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:text="$45"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_total_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_discount"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_toEndOf="@id/tv_total_price"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:text="$45"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />


                <TextView
                    android:id="@+id/tv_paid_amount_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_paid_amount"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_toEndOf="@+id/tv_paid_amount"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:text="$50"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/viridian"
                    android:textSize="@dimen/_13ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_layout_2"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/black_rect_cor_round"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp">


                <TextView
                    android:id="@+id/tv_address_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:text="@string/address_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_address_details"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:text="Camilla Vasquez"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_address_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_person_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/drawable_rect_circular_greyish_brown"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_address_type"
                    android:layout_marginTop="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/iv_location_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_my_location" />

                    <TextView
                        android:id="@+id/tv_address_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@id/iv_location_icon"
                        android:fontFamily="@font/sfuidisplayregular"
                        android:text="114B, 12th Avenue street, one hudson yards,NY, New york 12534"
                        android:textColor="@color/white__40"
                        android:textSize="@dimen/_9ssp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_phone_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_address"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:drawableStart="@drawable/ic_phone_my_addresses"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:text="+1 (860) 283-1343"
                    android:textColor="@color/white__40"
                    android:textSize="@dimen/_9ssp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_next"
                style="@style/semibold_test_13_black_back_yellow_oval_padding_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="@string/next" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>