<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"

    android:focusable="true"
    android:clickable="true"
    android:background="@color/black_two"
    tools:context="com.geora.ui.onboard.address.CreateProfileFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/sfuidisplaysemibold"
        android:text="@string/create_profile"
        android:textColor="@color/White"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/sfuidisplaysemibold"
        android:padding="@dimen/_10sdp"
        android:text="@string/skip"
        android:textColor="@color/White"
        android:textSize="@dimen/_13ssp" />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/black_rect_cor_round"

        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pin"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/sfuidisplaysemibold"
            android:padding="@dimen/_10sdp"
            android:text="Address Details"
            android:textColor="@color/White"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_current_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_target"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/sfuidisplaysemibold"
            android:padding="@dimen/_10sdp"
            android:text="Use current location"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_current_address"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/black_rect_cor_round_blacl_two"
            android:fontFamily="@font/sfuidisplaysemibold"
            android:hint="@string/address"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/White"
            android:textColorHint="@color/white_hint"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/tv_building"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/black_rect_cor_round_blacl_two"
            android:fontFamily="@font/sfuidisplaysemibold"
            android:hint="@string/flat_no_building_name"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/White"
            android:textColorHint="@color/white_hint"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/tv_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_building"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/black_rect_cor_round_blacl_two"

            android:fontFamily="@font/sfuidisplaysemibold"
            android:hint="@string/street_name"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/White"
            android:textColorHint="@color/white_hint"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_street"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/et_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:background="@drawable/black_rect_cor_round_blacl_two"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:hint="@string/city"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/White"
                android:textColorHint="@color/white_hint"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2" />

            <EditText
                android:id="@+id/et_pincode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:background="@drawable/black_rect_cor_round_blacl_two"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:hint="@string/pin_code"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/White"
                android:textColorHint="@color/white_hint"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_address"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/black_rect_cor_round"
        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_select_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_category"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/sfuidisplaysemibold"
            android:padding="@dimen/_10sdp"
            android:text="@string/select_campaign_categories"
            android:textColor="@color/White"
            android:textSize="@dimen/_13ssp" />

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_select_category"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/yellow_border_rect_filed"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/all"
                android:textColor="@color/black_two_"
                android:textSize="@dimen/_11ssp" />


            <TextView
                android:id="@+id/tv_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/yellow_border_rect"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/promotions"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/tv_fundraising"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/yellow_border_rect"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/fundraising"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_one"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/yellow_border_rect"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/events"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11ssp" />


            <TextView
                android:id="@+id/tv_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/yellow_border_rect"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/sales"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_save_address"
        android:layout_width="match_parent"
        style="@style/semibold_test_13_black_back_yellow_oval_padding_10"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/save_address"
        />

</RelativeLayout>