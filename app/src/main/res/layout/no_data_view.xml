<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_no_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/fl_add_address"
    android:layout_below="@+id/toolbar"
    android:background="@color/black"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_title_card"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_50sdp"
        android:src="@drawable/ic_no_address_graphic" />

    <TextView
        android:id="@+id/tv_title_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/sfuidisplaysemibold"
        android:text="@string/no_saved_address"
        android:textColor="@color/White"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_card"
        android:gravity="center"
        android:textAlignment="center"
        android:paddingStart="@dimen/_30sdp"
        android:fontFamily="@font/sfuidisplayregular"
        android:paddingEnd="@dimen/_30sdp"
        android:text="@string/don_t_worry_add_address_now_or_add_it_later_during_checkout_process"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/_11ssp" />
</RelativeLayout>
