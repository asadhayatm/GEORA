<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">


        <FrameLayout
            android:id="@+id/cl_profile_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/black_rect_cor_round"
                android:padding="@dimen/_10sdp">


                <TextView
                    android:id="@+id/tv_label_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfuidisplaysemibold"
                    android:text="@string/s_edit"
                    android:textColor="@color/butterscotch"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_edit"
                    tools:text="Saloni Bisht" />

                <TextView
                    android:id="@+id/tv_user_email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:textColor="@color/warm_grey"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                    tools:text="S@gmail.com" />

                <ImageView
                    android:id="@+id/iv_email_not_verified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_not_verified"
                    app:layout_constraintBottom_toBottomOf="@id/tv_user_email_id"
                    app:layout_constraintStart_toEndOf="@id/tv_user_email_id"
                    app:layout_constraintTop_toTopOf="@id/tv_user_email_id" />

                <TextView
                    android:id="@+id/tv_label_mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_mobile_no"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:text="@string/s_mobile_no"
                    android:textColor="@color/warm_grey"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_email_id" />


                <TextView
                    android:id="@+id/tv_label_date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_date_of_birth"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:text="@string/s_date_of_birth"
                    android:textColor="@color/warm_grey"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_mobile_number" />

                <TextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:gravity="end"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_label_mobile_number"
                    app:layout_constraintTop_toTopOf="@id/tv_label_mobile_number"
                    tools:text="346823674" />

                <TextView
                    android:id="@+id/tv_date_of_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    android:gravity="end"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_label_date_of_birth"
                    app:layout_constraintTop_toTopOf="@id/tv_label_date_of_birth"
                    tools:text="346823674" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:src="@drawable/ic_placeholder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_back" />

                <ImageView
                    android:id="@+id/iv_edit_iamge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_oval"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_edit"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/iv_user_image"
                    app:layout_constraintEnd_toEndOf="@id/iv_user_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>


        <!--  <android.support.constraint.ConstraintLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal">

              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/iv_user_image"
                  android:layout_width="@dimen/_80sdp"
                  android:layout_height="@dimen/_80sdp"
                  android:layout_marginTop="@dimen/_30sdp"
                  android:src="@drawable/ic_placeholder"
                  app:layout_constraintBottom_toBottomOf="parent" />


              <ImageView
                  android:id="@+id/iv_edit_iamge"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/yellow_oval"
                  android:padding="@dimen/_5sdp"
                  android:src="@drawable/ic_edit"
                  app:layout_constraintBottom_toBottomOf="@id/iv_user_image"
                  app:layout_constraintEnd_toEndOf="@id/iv_user_image" />

          </android.support.constraint.ConstraintLayout>
    -->
        <TextView
            android:id="@+id/tv_my_cards"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/black_rect_cor_round"
            android:drawableStart="@drawable/ic_my_cards"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/sfuidisplaysemibold"
            android:padding="@dimen/_10sdp"
            android:text="@string/s_my_cards"
            android:textColor="@color/White"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/cl_profile_detail" />

        <TextView
            android:id="@+id/tv_my_address"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/black_rect_cor_round"
            android:drawableStart="@drawable/ic_my_address"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/sfuidisplaysemibold"
            android:padding="@dimen/_10sdp"
            android:text="@string/s_my_address"
            android:textColor="@color/White"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/tv_my_cards" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/black_rect_cor_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/tv_my_address">

            <TextView
                android:id="@+id/tv_my_categories"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:drawableStart="@drawable/ic_category"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:padding="@dimen/_10sdp"
                android:text="@string/s_my_categories"
                android:textColor="@color/White"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_label_category_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfuidisplaysemibold"
                android:padding="@dimen/_10sdp"
                android:text="@string/s_edit"
                android:textColor="@color/butterscotch"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_my_categories" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fbl_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="visible"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_my_categories" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_10sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/_10sdp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
