<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5ssp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_side_menu" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:fontFamily="@font/sfuidisplaysemibold"
        android:gravity="center"
        android:text="@string/expires_on"
        android:textColor="@color/White"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_toRightOf="@+id/iv_menu"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5ssp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_notifications" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_toLeftOf="@+id/iv_notification"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_search" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/iv_search"
            android:background="@drawable/black_rect_cor_round"
            android:drawableStart="@drawable/ic_my_location"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/sfuidisplayregular"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:maxLines="1"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/White"
            android:textSize="@dimen/_11ssp" />
    </RelativeLayout>
</RelativeLayout>