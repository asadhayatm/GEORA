<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/drawable_rect_round_cornered_black_twenty"
    android:paddingBottom="@dimen/_10sdp"
    android:paddingTop="@dimen/_20sdp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/sfuidisplaysemibold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:text="Are you sure you want to logout?"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tv_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfuidisplaybold"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="@string/s_no"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/drawable_rect_border_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_yes"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message"
        />

    <TextView
        android:id="@+id/tv_yes"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/s_yes"
        android:textColor="@color/butterscotch"
        android:fontFamily="@font/sfuidisplaybold"
        android:padding="@dimen/_8sdp"
        android:gravity="center"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/yellow_border_round_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_no"
        app:layout_constraintTop_toBottomOf="@id/tv_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>